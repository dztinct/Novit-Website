                margin-top: -5%;
                height: 300px;
            }
            .client-logo-div{
                margin-top: 1%;
            }   
            #blog::before {
                left: -60px;
                top: -160px;
            }          
            .blog-title{
                padding-bottom: 15px;
            }
            .top-line{
                margin-top: 2%;
            }
            .bottom-line{
                display: none
            }
            #owl-demo{
                padding-bottom: 10%;
            }
            #home{
                height: 100vh;
            }
            .indicator{
                margin-left: 6%;
            }
            .val:hover{
