            }
            .blog-subtitle{
                position: absolute;
                margin-top: -5%;
                margin-left: 28%;
            }
            .val:hover{
                color: gold;
            }
        }

        /* MOBILE DEVICES */
        @media only screen and (max-width : 600px){
            .brandname{
