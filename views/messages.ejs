    <!-- =============== nav =============== -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid" style="background-color: #000;">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <!-- BUSINESS LOGO -->
                    <div style="display: flex;">
                        <p class="logoimgpara"><a class="navbar-brand" href="/"><img class="logoimg" src="/img/logo.png"/></a></p>
                        <a href="/"><p class="brandname" style="color: gold;" > NOVIT&nbsp;TECHNOLOGIES</p></a>
                    </div>
                    
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
						<li>
                            <a class="page-scroll" href="/">Home</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="/about">About</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="/Services">Services</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="/team">Team</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="/contact">Contact</a>
                        </li>
                    </ul>
                </div>
                <!-- =============== navbar-collapse =============== -->

            </div>
        </div>
        <!-- =============== container-fluid =============== -->
    </nav>




<div class="table-responsive all">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead>
          <tr>
            <th scope="col" style="font-size:1rem">Name</th>
            <th scope="col" style="font-size:1rem">Email</th>
            <th scope="col" style="font-size:1rem">Message</th>
          </tr>
        </thead>
        <tbody>
            <% data.map((item) => { %>
                    <tr>
                        <td><a href="/messages/view/<%= item._id %>""><%= item.name %></a> </td>
                        <td><a href="/messages/view/<%=item._id%>"><%= item.email %></a> </td>
                        <td><a href="/messages/view/<%= item.id %>"><%= item.message %></a> </td>
                    </tr>
                    <% }) %> 
                </a>
        </tbody>
      </table>
      </div>
   
